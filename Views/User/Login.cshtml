@model LoginUser
<h3>Login</h3>
<form asp-action="Login" asp-controller="User">
    <div class="input-field col s12">
        <input asp-for="LoginEmail" type="text">
        <label asp-for="LoginEmail"></label>
        <span asp-validation-for="LoginEmail"></span>
    </div>
    <div class="input-field col s12">
        <input asp-for="LoginPassword" type="password">
        <label asp-for="LoginPassword"></label>
        <span asp-validation-for="LoginPassword"></span>
    </div>
    <div class="input-field col s12">
        <button class="waves-effect waves-light btn" type="submit">Login</button>
    </div>
</form>